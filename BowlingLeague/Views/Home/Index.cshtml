@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Bowler>

<h1>@(ViewBag.TeamName != null ? ViewBag.TeamName : "Bowlers")</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Bowler Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Phone Number</th>
            <th>Team</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
            {
            <tr>
                @if (b.BowlerMiddleInit != null)
                {
                    <td>@b.BowlerFirstName @b.BowlerMiddleInit @b.BowlerLastName</td>
                }
                else
                {
                    <td>@b.BowlerFirstName @b.BowlerLastName</td>
                }
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td>@b.Team.TeamName</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID" class="btn my-edit">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID" class="btn my-delete">Delete</a></td>
            </tr>
            }
    </tbody>
</table>
<a class="btn my-create" asp-controller="Home" asp-action="Create" asp-route-id="@ViewBag.NextBowler">Add Bowler</a>